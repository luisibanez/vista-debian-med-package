import sys
sys.path = ['${VISTA_SOURCE_DIR}/Python/vista'] + sys.path

from OSEHRAHelper import ConnectToMUMPS,PROMPT

VistA=ConnectToMUMPS("${logfile}","${VISTA_CACHE_INSTANCE}","${VISTA_CACHE_NAMESPACE}")
if ('${VISTA_CACHE_USERNAME}' and '${VISTA_CACHE_PASSWORD}'):
  VistA.login('${VISTA_CACHE_USERNAME}','${VISTA_CACHE_PASSWORD}')
if VistA.type=='cache':
  try:
    VistA.ZN('${VISTA_CACHE_NAMESPACE}')
  except IndexError,no_namechange:
    pass
VistA.wait(PROMPT)
VistA.write('D ^%RI')
if VistA.type=='GTM':
  VistA.wait('Formfeed delimited <No>?')
  VistA.write('No')
  VistA.wait('Input device: <terminal>:')
  VistA.write('${RoutineImportFile}')
  VistA.wait('Output directory :')
  VistA.write('${RoutineImportDir}/')
  VistA.wait(PROMPT, 1500)
  VistA.write('H')
else:
  VistA.wait('Device:')
  #set the device to be routines.ro file
  VistA.write('${RoutineImportFile}')
  VistA.wait('"R" =>')
  #just use default
  VistA.write('')
  VistA.wait('No =>')
  #we need to Override the routines
  VistA.write('YES')
  VistA.wait('<0>')
  VistA.write('')
  VistA.wait('Routine Input Option:')
  VistA.write('All Routines')
  VistA.wait('No =>')
  VistA.write('YES')
  VistA.wait('Yes =>')
  VistA.write('')
  VistA.wait('Yes =>')
  VistA.write('')
  VistA.wait(PROMPT, 1500)
  VistA.write('h')
